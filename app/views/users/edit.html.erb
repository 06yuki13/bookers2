<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

     <% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<%= form_with model: @user, local: true do |f| %>
 <label for="user_name">Name</label><br>
  <%= f.text_field :name, class:"form-control" %><br>

  <label for="user_image">Image</label><br>
  <%= f.file_field :profile_image, class:"form-control-file" %><br>


<label for="user_introduction">Introduction</label><br>
  <%= f.text_area :introduction,class:"form-control" %>

  <%= f.submit 'Update User' ,class:"btn btn-secondary" %>

  <% end %>

    </div>
  </div>
</div>
